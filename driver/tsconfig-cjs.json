{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2019",
    "outDir": "dist/src",
    "types": [
      "node",
      "reflect-metadata"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "inlineSources": false,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "typeRoots": [
      "./src",
      "./src/typings",
      "./node_modules/@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "*": [
        "src/typings/*"
      ],
      "@lex/*": [
        "node_modules/@lex/*"
      ]
    },
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
