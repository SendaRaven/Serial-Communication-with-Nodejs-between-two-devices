{
  "extends": "tslint-config-airbnb",
  "rules": {
    "import-name": false,
    "max-line-length": [
      false,
      {
        "limit": 120,
        "ignore-pattern": "// |^import |^export {(.*?)}|class [a-zA-Z] implements |^\\w+\\((\\w+\\:\\w+|(\\w+\\:\\w+(,\\w+\\:\\w+)+))\\)\\:.* \\{",
        "tabWidth": 2,
        "ignoreComments": true,
        "ignoreTrailingComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ],
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "never",
          "arrays": "never",
          "functions": "never",
          "typeLiterals": "never"
        },
        "esSpecCompliant": true
      }
    ],
    "ter-indent": false,
    "align": false,
    "no-parameter-reassignment": false,
    "no-conditional-assignment": [
      2,
      "except-parens"
    ],
    "no-this-assignment": false
  }
}
